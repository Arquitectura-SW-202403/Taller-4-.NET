@page
@model MyApp.Namespace.ReservationsModel
@{
    ViewData["Title"] = "Reserva de Espacios Deportivos";
}

<!-- Estilo personalizado -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #495057;
    }

    .container {
        margin-top: 50px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 30px;
    }

    .card-title {
        color: #007bff;
        font-size: 2rem;
        text-align: center;
    }

    .form-label {
        font-weight: bold;
        color: #343a40;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 15px;
        font-size: 1rem;
        width: 100%;
    }

    .form-select {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 15px;
        font-size: 1rem;
        width: 100%;
    }

    .btn {
        background-color: #007bff;
        color: white;
        padding: 12px 30px;
        font-size: 1.2rem;
        border-radius: 10px;
        text-align: center;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #0056b3;
    }

    .text-muted {
        font-size: 0.9rem;
    }

    .footer {
        margin-top: 40px;
        text-align: center;
        font-size: 0.9rem;
        color: #6c757d;
    }

    
</style>

<div class="container">
    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="card-title">Reserva de Espacios Deportivos</h1>
        <p class="lead">Selecciona un espacio, la fecha y la hora para tu reserva.</p>
    </div>

    <!-- Formulario de Reserva -->
    <div class="card shadow-lg">
        <div class="card-body">
            <form method="post">
                
                <!-- Selección del Espacio Deportivo -->
                <div class="mb-3">
                    <label for="space" class="form-label">Espacio Deportivo</label>
                    <select class="form-select" id="space" name="SelectedSpaceId" onchange="loadTimeSlots()" required>
                        <option value="">Selecciona un espacio</option>
                        @foreach (var space in Model.Spaces)
                        {
                            <option value="@space.Id">@space.Name</option>
                        }
                    </select>
                </div>

                <!-- Selección de la Franja Horaria -->
                <div class="mb-3">
                    <label for="timeSlot" class="form-label">Franja Horaria</label>
                    <select class="form-select" id="timeSlot" name="SelectedTimeSlot" required>
                        <option value="">Selecciona una franja horaria</option>
                    </select>
                </div>

                <!-- Nombre del Cliente -->
                <div class="mb-3">
                    <label for="customerName" class="form-label">Nombre del Cliente</label>
                    <input type="text" class="form-control" id="customerName" name="CustomerName" placeholder="Ingresa tu nombre" required>
                </div>

                <!-- Selección de la Fecha -->
                <div class="mb-3">
                    <label for="date" class="form-label">Fecha de la Reserva</label>
                    <input type="date" class="form-control" id="date" name="ReservationDate" required>
                </div>

                <!-- Botón para Confirmar Reserva -->
                <div class="text-center">
                    <button type="submit" class="btn">Confirmar Reserva</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Pie de Página -->
    <div class="footer">
        <small>Recibirás una confirmación por correo electrónico con los detalles de tu reserva.</small>
    </div>
</div>

<!-- Script para carga de franjas horarias -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function loadTimeSlots() {
        var spaceId = $('#space').val();
        if (spaceId) {
            // Realizar una solicitud AJAX para obtener las franjas horarias
            $.ajax({
                url: '@Url.Page("GetTimeSlots")', // Ruta al método en el servidor que devuelve las franjas horarias
                type: 'GET',
                data: { spaceId: spaceId },
                success: function(response) {
                    // Limpiar las opciones actuales
                    $('#timeSlot').empty();
                    $('#timeSlot').append('<option value="">Selecciona una franja horaria</option>');
                    // Agregar las nuevas franjas horarias
                    $.each(response, function(index, timeSlot) {
                        $('#timeSlot').append('<option value="' + timeSlot + '">' + timeSlot + '</option>');
                    });
                },
                error: function() {
                    alert("Error al cargar las franjas horarias.");
                }
            });
        } else {
            // Si no se selecciona un espacio, limpiar las franjas horarias
            $('#timeSlot').empty();
            $('#timeSlot').append('<option value="">Selecciona una franja horaria</option>');
        }
    }
</script>
