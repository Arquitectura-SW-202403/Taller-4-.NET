@page
@model MyApp.Namespace.ReservationsModel
@{
    ViewData["Title"] = "Reserva de Espacios Deportivos";
}

<!-- Estilo personalizado -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #495057;
    }

    .container {
        margin-top: 50px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 30px;
    }

    .card-title {
        color: #007bff;
        font-size: 2rem;
        text-align: center;
    }

    .form-label {
        font-weight: bold;
        color: #343a40;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 15px;
        font-size: 1rem;
        width: 100%;
    }

    .form-select {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 15px;
        font-size: 1rem;
        width: 100%;
    }

    .btn {
        background-color: #007bff;
        color: white;
        padding: 12px 30px;
        font-size: 1.2rem;
        border-radius: 10px;
        text-align: center;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #0056b3;
    }

    .text-muted {
        font-size: 0.9rem;
    }

    .footer {
        margin-top: 40px;
        text-align: center;
        font-size: 0.9rem;
        color: #6c757d;
    }

</style>

<div class="container">
    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="card-title">Reserva de Espacios Deportivos</h1>
        <p class="lead">Selecciona un espacio, la fecha y la hora para tu reserva.</p>
    </div>

    <!-- Formulario de Reserva -->
    <div class="card shadow-lg">
        <div class="card-body">
            <form method="post">
                
                

                <!-- Selección de la Franja Horaria -->
                <div class="mb-3">
                    <label for="timeSlot" class="form-label">Franja Horaria</label>
                    <select class="form-select" id="timeSlot" name="SelectedTimeSlot" required>
                        <option value="">Selecciona una franja horaria</option>
                
                    </select>
                </div>

                <!-- Nombre del Cliente -->
                <div class="mb-3">
                    <label for="customerName" class="form-label">Nombre del Cliente</label>
                    <input type="text" class="form-control" id="customerName" name="CustomerName" placeholder="Ingresa tu nombre" value="@Model.CustomerName" required>
                </div>

                <!-- Selección de la Fecha -->
                <div class="mb-3">
                    <label for="date" class="form-label">Fecha de la Reserva</label>
                    <input type="date" class="form-control" id="date" name="ReservationDate" value="@Model.ReservationDate.ToString("yyyy-MM-dd")" required>
                </div>

                <!-- Botón para Confirmar Reserva -->
                <div class="text-center">
                    <button type="submit" class="btn">Confirmar Reserva</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Pie de Página -->
    <div class="footer">
        <small>Recibirás una confirmación por correo electrónico con los detalles de tu reserva.</small>
    </div>
</div>
